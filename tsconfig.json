{
  "include": ["./scripts", "./tests", "./typechain-types", "scripts/createCampaign.ts"],
  "files": ["./hardhat.config.ts"],
  "compilerOptions": {
    //"target": "es2020",
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "module": "commonJS",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "incremental": true,
    "noEmit": true,
    "jsx": "preserve"
  },
  "exclude": ["node_modules"]
}
